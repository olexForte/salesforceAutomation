<?xml version="1.0"?>
<configuration>

    <define name="outputDir" class="logging.LogbackPropertyDefiner">
    </define>

    <appender name="FILE" class="logging.LazyFileAppender">
        <file>${outputDir}/logfile.log</file>
        <append>false</append>
        <encoder>
            <pattern>%d %-5level [%thread] %logger{0}: %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d %-5level [%thread] %logger{0}: %msg%n</pattern>
        </encoder>
    </appender>
    <!--    <appender name="ANALYTICS-FILE" class="ch.qos.logback.core.FileAppender">-->
    <appender name="ANALYTICS-FILE" class="logging.LazyFileAppender">
        <file>${outputDir}/analytics.log</file>
        <append>false</append>
        <encoder>
            <pattern>%d %-5level [%thread] %logger{0}: %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="STOUT-FILE" class="logging.LazyFileAppender">
        <file>${outputDir}/logfile.txt</file>
        <append>false</append>
        <encoder>
            <pattern>%d %-5level [%thread] %logger{0}: %msg%n</pattern>
        </encoder>
    </appender>
    <!-- additivity=false ensures analytics data only goes to the analytics log -->
    <logger name="analytics" level="DEBUG" additivity="false">
        <appender-ref ref="ANALYTICS-FILE"/>
    </logger>
    <root level="info">
        <appender-ref ref="STOUT-FILE"/>
        <!--        <appender-ref ref="FILE"/>-->
    </root>
</configuration>